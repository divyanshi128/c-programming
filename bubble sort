#include <stdio.h>

int main()
{
    int n;
    printf("enter the size of an array: ");
    scanf("%d",&n);
    int a[n],temp;
    printf("enter the elements of an array: ");
    for(int i=0;i<n;i++){
        scanf("%d",&a[i]);
    }
    for(int i=0;i<n-1;i++){
        for(int j=0;j<n-1-i;j++){
            if(a[j]>a[j+1]){
                temp=a[j];
                a[j]=a[j+1];
                a[j+1]=temp;
            }
        }
    }
    for(int i=0;i<n;i++)
    printf("%d ",a[i]);

    return 0;
}
